{
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[latex]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "files.encoding": "utf8",
  "git.autofetch": true,
  "git.autorefresh": true,
  "git.fetchOnPull": false,
  "git.rebaseWhenSync": true,
  "git.useForcePushWithLease": true,
  "git.inputValidationSubjectLength": 72,
  "git.inputValidationLength": 100,
  "git-graph.dialog.rebase.launchInteractiveRebase": false,
  "git-graph.dialog.rebase.ignoreDate": false,
  "git-graph.fetchAndPrune": true,
  "latex-workshop.latex.tools": [
    {
      "name": "lualatex vscode tool",
      "command": "lualatex",
      "args": [
        "--synctex=1",
        "--interaction=nonstopmode",
        "--c-style-errors",
        "--shell-escape",
        "%DOC%"
      ],
      "env": {}
    },
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "lualatex recipe",
      "tools": [
        "lualatex vscode tool",
        "lualatex vscode tool"
      ]
    },
    {
      "name": "lualatex once",
      "tools": [
        "lualatex vscode tool",
      ]
    }
  ],
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.chktex.run": "onType",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latexindent.args": [
    "-c",
    "%DIR%/",
    "%TMPFILE%",
    "-y=defaultIndent: '  '"
  ],
  "latex-workshop.view.outline.sections": [
    "section",
    "subsection",
    "subsubsection",
    "paragraph",
    "subparagraph"
  ],
  "spellright.documentTypes": [
    "diagram",
    "latex",
    "markdown",
    "plaintext"
  ],
  "spellright.language": [
    "en",
    "it"
  ]
}
